<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.DevolucaoController">
   
   <children>
      <Text layoutX="226.0" layoutY="44.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Registrar Devolução">
         <font>
            <Font size="28.0" />
         </font>
      </Text>
      
      <!-- Lista de Retiradas Ativas -->
      <Label layoutX="50.0" layoutY="93.0" text="Retiradas Ativas:">
         <font>
            <Font size="18.0" />
         </font></Label>
      <ComboBox fx:id="comboRetiradas" layoutX="50.0" layoutY="120.0" onAction="#selecionarRetirada" prefHeight="25.0" prefWidth="443.0" />
      
      <!-- Data da Devolução -->
      <Label layoutX="50.0" layoutY="170.0" text="Data da Devolução:">
         <font>
            <Font size="18.0" />
         </font></Label>
      <DatePicker fx:id="datePickerDevolucao" layoutX="222.0" layoutY="171.0" prefHeight="25.0" prefWidth="200.0" />
      
      <!-- Detalhes da Retirada Selecionada -->
      <Label layoutX="53.0" layoutY="213.0" text="Detalhes da Retirada:">
         <font>
            <Font size="18.0" />
         </font></Label>
      <Label fx:id="labelDetalhes" layoutX="50.0" layoutY="240.0" prefHeight="100.0" prefWidth="443.0" style="-fx-border-color: #ccc; -fx-border-width: 1px; -fx-padding: 10px; -fx-background-color: #f9f9f9;" />
      
      <!-- Botões -->
      <Button layoutX="309.0" layoutY="393.0" mnemonicParsing="false" onAction="#registrarDevolucao" text="Registrar Devolução">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button layoutX="53.0" layoutY="393.0" mnemonicParsing="false" onAction="#voltar" text="Voltar">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      
      <!-- Mensagem de Feedback -->
      <Label fx:id="labelMensagem" layoutX="50.0" layoutY="352.0" prefHeight="20.0" prefWidth="600.0" />
   </children>
</AnchorPane>
